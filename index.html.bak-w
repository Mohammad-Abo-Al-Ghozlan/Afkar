    <script>
        // Scroll reveal animation
        const revealElements = document.querySelectorAll('.reveal');
        const processSteps = document.querySelectorAll('.process-step');
        
        const revealOnScroll = () => {
            const windowHeight = window.innerHeight;
            const revealPoint = 100;
            
            revealElements.forEach(element => {
                const elementTop = element.getBoundingClientRect().top;
                
                if (elementTop < windowHeight - revealPoint) {
                    element.classList.add('active');
                }
            });

            processSteps.forEach(step => {
                const stepTop = step.getBoundingClientRect().top;
                
                if (stepTop < windowHeight - revealPoint) {
                    step.classList.add('visible');
                }
            });
        };

        // Smooth scroll for navigation links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Parallax effect for hero section
        window.addEventListener('scroll', () => {
            const scrolled = window.pageYOffset;
            const hero3d = document.querySelector('.hero-3d');
            const heroContent = document.querySelector('.hero-content');
            
            if (hero3d) {
                hero3d.style.transform = `translate(-50%, -50%) translateY(${scrolled * 0.3}px) rotate(${scrolled * 0.1}deg)`;
            }
            
            if (heroContent && scrolled < window.innerHeight) {
                heroContent.style.opacity = 1 - (scrolled / window.innerHeight);
                heroContent.style.transform = `translateY(${scrolled * 0.2}px)`;
            }

            revealOnScroll();
        });

        // Initial reveal check
        revealOnScroll();

        // Cursor glow effect (desktop only)
        if (window.innerWidth > 768) {
            document.addEventListener('mousemove', (e) => {
                const orb = document.querySelector('.orb-3');
                if (orb) {
                    orb.style.left = `${e.clientX - 175}px`;
                    orb.style.top = `${e.clientY - 175}px`;
                }
            });
        }

        // Service card hover effect
        const serviceCards = document.querySelectorAll('.service-card');
        serviceCards.forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.style.zIndex = '100';
            });
            
            card.addEventListener('mouseleave', function() {
                this.style.zIndex = '1';
            });
        });

        // Animated counter for stats
        const animateValue = (element, start, end, duration) => {
            let startTimestamp = null;
            const step = (timestamp) => {
                if (!startTimestamp) startTimestamp = timestamp;
                const progress = Math.min((timestamp - startTimestamp) / duration, 1);
                const value = Math.floor(progress * (end - start) + start);
                element.textContent = value.toLocaleString();
                if (progress < 1) {
                    window.requestAnimationFrame(step);
                }
            };
            window.requestAnimationFrame(step);
        };

        // Trigger counter animation on scroll
        const stats = document.querySelectorAll('.stat-value');
        let statsAnimated = false;

        window.addEventListener('scroll', () => {
            if (!statsAnimated) {
                stats.forEach(stat => {
                    const rect = stat.getBoundingClientRect();
                    if (rect.top < window.innerHeight && rect.bottom > 0) {
                        statsAnimated = true;
                        // Extract numbers from text content
                        const text = stat.textContent;
                        const number = parseInt(text.replace(/\D/g, ''));
                        if (!isNaN(number)) {
                            stat.textContent = '0';
                            setTimeout(() => {
                                animateValue(stat, 0, number, 2000);
                                // Add back the suffix
                                setTimeout(() => {
                                    if (text.includes('M')) stat.textContent += 'M+';
                                    if (text.includes('%')) stat.textContent += '%';
                                    if (text.includes('s')) stat.textContent += 's';
                                    if (text.includes('B')) stat.textContent += 'B+';
                                    if (text.includes('+') && !text.includes('M') && !text.includes('B')) stat.textContent += '+';
                                }, 2000);
                            }, 200);
                        }
                    }
                });
            }
        });
    </script>
